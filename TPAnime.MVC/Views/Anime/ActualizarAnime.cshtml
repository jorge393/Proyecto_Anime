@using TPAnime.MVC.ViewModels;
@model VMAnime;
<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/actualizar.css" asp-append-version="true" />
    <title>Actualizar Anime</title>
</head>
<body>
    <main class="cuerpo">
        <div class="contenedor">
            <form asp-action="ActualizarAnime" method="post">
                <div asp-validation-summary="All"></div>
                <div class="mb-2">
                    <label asp-for="NombreAnime" class="form-label nombreLink" style="font-size:18px ;"><b>Nombre</b></label>
                    <input asp-for="NombreAnime" class="form-control" style="font-size:18px ;">

                    <label asp-for="GeneroAnime" class="form-label nombreLink" style="font-size:18px ;"><b>Genero</b></label>
                    <input asp-for="GeneroAnime" class="form-control" style="font-size:18px ;">

                    <label asp-for="EpisodiosAnime" class="form-label nombreLink" style="font-size:18px ;"><b>Episodios</b></label>
                    <input asp-for="EpisodiosAnime" class="form-control" style="font-size:18px ;">

                    <label asp-for="LanzamientoAnime" class="form-label nombreLink" style="font-size:18px ;"><b>Lanzamiento</b></label>
                    <input asp-for="LanzamientoAnime" class="form-control" style="font-size:18px ;">

                    <label asp-for="EstadoAnime" class="form-label nombreLink" style="font-size:18px ;"><b>Estado</b></label>
                    <input asp-for="EstadoAnime" class="form-control" style="font-size:18px ;">
                    <input type="hidden" asp-for="IdAnime"/>

                    <select asp-items= "Model.Estudios" asp-for= "IdEstudio" class= "form-select">
                        @if (Model.IdEstudio == 0 )
                        {
                            <option selected="selected" value ="" disabled>Selecione un estudio</option>
                        }
                    </select>
                    <select asp-items= "Model.Autores" asp-for= "idAutor" class= "form-select">
                        @if (Model.idAutor == 0 )
                        {
                            <option selected = "selected" value ="" disabled>Selecione un Autor</option>
                        }
                    </select>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary" style="font-size:18px ;"><b>Actualizar</b></button>
                </div>
            </form>
        </div>
    </main>
</body>
</html>