@using TPAnime.Core;
@model IEnumerable<Autor>
<!DOCTYPE html>
<html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <title>Autores</title>
</head>
<body>
    <table>
        <thead>
            <tr>
                <td>Nombre</td>
                <td>Animes Creados</td>
            </tr>
        </thead>
        <tbody>
            @foreach (TPAnime.Core.Autor autor in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Autor" asp-action="Index" asp-route-id="@autor.Id"
                        style="text-decoration: none; color: black">@autor.Nombre</a>
                    </td>
                    <td>
                        <form asp-controller="Autor" asp-action="EliminarAutor" method="post">
                            <input type="hidden" asp-for="@autor.Id" />
                            <button type="submit">Eliminar</button>
                            <a asp-controller="Autor" asp-action="ActualizarAutor" asp-route-id="@autor.Id">Actualizar</a>
                        </form>  
                    </td>
                </tr>
            }

        </tbody>
    </table>
    <a asp-controller="Autor" asp-action="AgregarAutor">Agregar un nuevo autor</a>

    @* <a asp-controller="Autor" asp-action="EliminarAutor">Eliminar un autor</a> *@
</body>

</html>