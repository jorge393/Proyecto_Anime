@using TPAnime.Core;
@model IEnumerable<Autor>

<!DOCTYPE html>
<html>
<head>
    <title>Lista</title>
</head>
<body>
    <a>Alta Autor</a>
    <h5>Categorias</h5>
    <table>
        <thead>
            <tr>
                <td>Nombre</td>
                <td>Animes Creados</td>
            </tr>
        </thead>
        <tbody>
            <p>en proceso</p>
            @foreach (TPAnime.Core.Autor autor in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Autor" asp-action="Index" asp-route-id="@autor.Id" style="text-decoration: none; color: black">@autor.Nombre</a>
                    </td>
                    
                </tr>
            }

            @* <p>Agregar un autor:</p> *@
        </tbody>
    </table>
    <a asp-controller="Autor" asp-action="AgregarAutor">Agregar un nuevo autor</a>
</body>
</html>