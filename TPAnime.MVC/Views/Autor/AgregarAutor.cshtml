@model TPAnime.Core.Autor;
<!DOCTYPE html>
<html>

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/agregar.css" asp-append-version="true" />
    <title>Agregar Autor</title>
</head>

<body>
    <main class="cuerpo">
        <div class="contenedor">
            <form asp-action="AgregarAutor" method="post">
                <div asp-validation-summary="All"></div>
                <div class="mb-2">
                    <label asp-for="Nombre" class="form-label nombreLink" style="font-size:18px ;"><b>Nombre</b></label>
                    <input asp-for="Nombre" class="form-control" style="font-size:18px ;">
                    <label asp-for="Apellido" class="form-label nombreLink" style="font-size:18px ;"><b>Apellido</b></label>
                    <input asp-for="Apellido" class="form-control" style="font-size:18px ;">
                </div>
                <div>
                    <button type="submit" class="btn btn-primary" style="font-size:18px ;"><b>Agregar</b></button>
                </div>
            </form>
        </div>
    </main>
</body>

</html>